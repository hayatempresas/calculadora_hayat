        "installerHeaderIcon": "./icon.ico"
      },
      "mac": {
        "target": "dmg",
        "icon": "./icon.icns"
      },
      "linux": {
        "target": "AppImage",
        "icon": "assets/"
      },
      "files": [
        "main.js",
        "dist/**",
        "node_modules/**",
        "package.json"
      ]
    }
  
}
