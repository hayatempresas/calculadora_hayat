  },
  "build": {
      "appId": "com.hayat.calculadora",
      "productName": "Calculadora Hayat",
      "directories": {
        "output": "dist-electron"
      },
      "win": {
        "target": "nsis"
      },
      "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "Calculadora Hayat",
